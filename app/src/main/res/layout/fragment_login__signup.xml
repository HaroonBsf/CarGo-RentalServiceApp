<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Login.Login_SignupFragment"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_5sdp">

        <Button
            android:id="@+id/btnFragmentLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/product_sans_regular"
            android:text="@string/log_in"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textAllCaps="false"
            android:textColor="@color/app_theme_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:focusable="true" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_5sdp">

        <Button
            android:id="@+id/btnFragmentSignup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/product_sans_regular"
            android:text="@string/sign_up"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:focusable="true"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/load_boarding_screen">

        <ImageView
            android:id="@+id/iv_back_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_cross"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:tint="@color/boarding_load_color" />

    </LinearLayout>

</LinearLayout>