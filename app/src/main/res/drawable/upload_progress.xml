<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="270">

    <shape
        android:innerRadiusRatio="3.7"
        android:shape="ring"
        android:thickness="16dp"
        android:useLevel="true">

        <corners
            android:radius="10dp"/>

        <gradient
            android:angle="0"
            android:type="sweep"
            android:endColor="@color/app_theme_color"
            android:startColor="@color/app_theme_color"
            android:useLevel="false"/>

    </shape>

</rotate>