<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="2500">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="10"
        android:useLevel="false">

        <size
            android:width="@dimen/_76sdp"
            android:height="@dimen/_76sdp" />

        <gradient
            android:angle="0"
            android:endColor="#00ffffff"
            android:startColor="@color/app_theme_color"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>