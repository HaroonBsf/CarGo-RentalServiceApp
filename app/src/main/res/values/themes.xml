<resources>

    <style name="Base.Theme.FYP" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>



        <item name="android:statusBarColor">@color/app_theme_color</item>
